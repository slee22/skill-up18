<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    tools:context=".DeviceDetailActivity">



    <LinearLayout
        android:id="@+id/ambient_temprature_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="invisible">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="60dp"
            android:text="39℃"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/ambient_temprature"
            android:src="@drawable/temprature"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ir_temprature_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="invisible">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="60dp"
            android:text="39℃"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/ir_temprature"
            android:src="@drawable/temprature"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ir_accelerometer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="invisible">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="60dp"
            android:text="+1.65g"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/ir_accelerometer"
            android:src="@drawable/accelerometer"/>
    </LinearLayout>




    <LinearLayout
        android:id="@+id/ir_humidity_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="invisible">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="60dp"
            android:text="42%"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/ir_humidity"
            android:src="@drawable/humidity"/>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/ir_magnetometer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="invisible">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="60dp"
            android:text="X:-0.1uT\nY:0.6uT\nZ:-3.6uT"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/ir_magnetometer"
            android:src="@drawable/magnetometer"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ir_barometer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="invisible">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="60dp"
            android:text="39℃"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/ir_barometer"
            android:src="@drawable/temprature"/>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/ir_gyroscope_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="invisible">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="60dp"
            android:text="39℃"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/ir_gyroscope"
            android:src="@drawable/temprature"/>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/deviceInformationLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/deviceInfomation"
            android:src="@drawable/breif"/>
    </LinearLayout>


    <ListView android:id="@+id/left_drawer"
              android:layout_width="240dp"
              android:layout_height="match_parent"
              android:layout_gravity="start"
              android:choiceMode="singleChoice"
              android:divider="@android:color/transparent"
              android:dividerHeight="0dp"
              android:background="@color/colorWhite"/>


</android.support.v4.widget.DrawerLayout>